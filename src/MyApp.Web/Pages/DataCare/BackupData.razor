    {
        if (!CanUpdate) return;

        try
        {
            var success = await BackupScheduleService.ToggleScheduleAsync(schedule.Id, !schedule.IsEnabled);
            if (success)
            {
                await ToastService.ShowSuccess($"Schedule {(!schedule.IsEnabled ? "enabled" : "disabled")} successfully!");
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error toggling schedule: {ex.Message}");
        }
    }

