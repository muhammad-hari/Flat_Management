    {
        if (!CanDelete) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this backup schedule?");
        if (!confirmed) return;

        try
        {
            await BackupScheduleService.DeleteScheduleAsync(id);
            await ToastService.ShowSuccess("Backup schedule deleted successfully!");
            await LoadData();
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error deleting schedule: {ex.Message}");
        }
    }

