    private string GetDownloadUrl(BackupHistory history)
    {
        var fileName = Path.GetFileName(history.FilePath);
        return $"/backups/{fileName}";
    }

    private async Task RestoreBackup(int historyId, string fileName)
    {
        try
        {
            // Validate backup menggunakan API
            var validationUrl = $"/api/datacare/restore/validate/{historyId}";
            var response = await JSRuntime.InvokeAsync<object>("fetch", validationUrl);
            
            // Simple confirmation
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
                $"⚠️ WARNING: Restore database from backup?\n\n" +
                $"File: {fileName}\n" +
                $"This will replace ALL current data!\n\n" +
                $"Continue?");
            
            if (!confirmed) return;

            await ToastService.ShowInfo("Restoring database...");

            // Call restore API
            using var httpClient = new HttpClient();
            var restoreResponse = await httpClient.PostAsync($"/api/datacare/restore/{historyId}", null);
            
            if (restoreResponse.IsSuccessStatusCode)
            {
                await ToastService.ShowSuccess("✅ Database restored successfully! Page will reload...");
                
                // Reload page after 2 seconds
                await Task.Delay(2000);
                NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
            }
            else
            {
                var error = await restoreResponse.Content.ReadAsStringAsync();
                await ToastService.ShowError($"❌ Restore failed: {error}");
            }
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"❌ Restore failed: {ex.Message}");
        }
    }

    private async Task DeleteBackupHistory(int historyId)
    {
        if (!CanDelete) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Delete this backup file?");
        if (!confirmed) return;

        try
        {
            var success = await BackupService.DeleteBackupFileAsync(historyId);
            if (success)
            {
                await ToastService.ShowSuccess("Backup file deleted successfully!");
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Delete failed: {ex.Message}");
        }
    }

    private async Task OnRestoreFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.GetMultipleFiles(1).FirstOrDefault();
            if (file != null)
            {
                RestoreFile = e.File;
                RestoreFileName = file.Name;
            }
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error selecting file: {ex.Message}");
        }
    }

    private async Task RestoreFromUpload()
    {
        if (RestoreFile == null)
        {
            await ToastService.ShowWarning("Please select a backup file first.");
            return;
        }

        IsRestoring = true;
        StateHasChanged();

        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Restore database from file '{RestoreFile.Name}'?\nThis will overwrite ALL current data. Continue?");
            if (!confirmed)
            {
                IsRestoring = false;
                return;
            }

            var content = new MultipartFormDataContent();
            var stream = RestoreFile.OpenReadStream(1024 * 1024 * 100); // max 100MB
            content.Add(new StreamContent(stream), "file", RestoreFile.Name);

            var response = await Http.PostAsync("api/datacare/restore/upload", content);

            if (response.IsSuccessStatusCode)
            {
                await ToastService.ShowSuccess("✅ Database restored successfully! Page will reload...");
                CloseRestoreModal();
                await Task.Delay(2000);
                NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await ToastService.ShowError($"❌ Restore failed: {error}");
            }
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"❌ Restore failed: {ex.Message}");
        }
        finally
        {
            IsRestoring = false;
            StateHasChanged();
        }
    }

