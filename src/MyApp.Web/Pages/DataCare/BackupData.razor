    {
        RestoreFileName = string.Empty;
        ShowRestoreModal = true;
    }

    private void CloseRestoreModal()
    {
        ShowRestoreModal = false;
        RestoreFileName = string.Empty;
    }

    // Handle time input change
    private void OnTimeChanged(ChangeEventArgs e)
    {
        if (e.Value != null)
        {
            ScheduledTimeString = e.Value.ToString() ?? "00:00";
        }
    }

    private async Task SaveSchedule()
    {
        if (!CanCreate && !CanUpdate) return;

        IsSaving = true;
        StateHasChanged();

        try
        {
            // Parse time string to TimeOnly
            if (TimeOnly.TryParse(ScheduledTimeString, out TimeOnly time))
            {
                CurrentSchedule.ScheduledTime = time;
            }

            if (IsEditMode)
            {
                CurrentSchedule.UpdatedBy = CurrentUserId;
                await BackupScheduleService.UpdateScheduleAsync(CurrentSchedule);
                await ToastService.ShowSuccess("Backup schedule updated successfully!");
            }
            else
            {
                CurrentSchedule.CreatedBy = CurrentUserId ?? 0;
                await BackupScheduleService.CreateScheduleAsync(CurrentSchedule);
                await ToastService.ShowSuccess("Backup schedule created successfully!");
            }

            await LoadData();
            CloseModal();
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error saving schedule: {ex.Message}");
        }
        finally
        {
            IsSaving = false;
            StateHasChanged();
        }
    }

