    {
        if (!CanCreate || IsBackingUp) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Execute manual backup now?");
        if (!confirmed) return;

        IsBackingUp = true;
        StateHasChanged();

        try
        {
            await BackupService.ExecuteBackupAsync(null, CurrentUserId, "Manual");
            await ToastService.ShowSuccess("Backup completed successfully!");
            await LoadData();
            ActiveTab = "history"; // Switch to history tab
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Backup failed: {ex.Message}");
        }
        finally
        {
            IsBackingUp = false;
            StateHasChanged();
        }
    }

    private async Task DownloadBackup(int historyId)
    {
        try
        {
            // Get download URL dari service
            var downloadUrl = await BackupService.DownloadBackupAsync(historyId);
            
            // Langsung buka URL di tab baru atau trigger download
            await JSRuntime.InvokeVoidAsync("open", downloadUrl, "_blank");
            
            await ToastService.ShowSuccess("Download started!");
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Download failed: {ex.Message}");
        }
