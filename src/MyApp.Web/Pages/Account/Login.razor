@page "/login"
@layout AuthLayout

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@using MyApp.Core.Domain
@using MyApp.Infrastructure.Identity
@using MyApp.Shared.Models
@using MyApp.Web.Authentication
@using static System.Net.WebRequestMethods

@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ToastService ToastService
@inject HttpClient Http
@inject ILogger<Login> Logger

<section class="bg-gradient-to-b from-red-700 to-black dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-64 h-64 mr-2" src="/assets/images/owl-logo.png" alt="logo">
        </a>
        <div class="w-full bg-gradient-to-b from-red-700 to-black rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-white">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl text-white font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Sign in to your account
                </h1>

                <EditForm Model="loginModel" OnValidSubmit="LoginAsync" class="space-y-4 md:space-y-6">
                    <DataAnnotationsValidator />
                    
                    <div>
                        <label for="username" class="block mb-2 text-sm font-medium text-white">Your Username</label>
                        <InputText @bind-Value="loginModel.UserName" 
                                   id="username" 
                                   type="text"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="Username or Email"
                                   disabled="@isLoading" />
                        <ValidationMessage For="@(() => loginModel.UserName)" class="text-red-500 text-sm mt-1" />
                    </div>
                    
                    <div>
                        <label for="password" class="block mb-2 text-sm font-medium text-white">Password</label>
                        <div class="relative">
                            <InputText @bind-Value="loginModel.Password" 
                                       id="password"
                                       type="@(_showPassword ? "text" : "password")"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 pr-10 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                       placeholder="Password"
                                       disabled="@isLoading" />
                            
                            <button type="button" 
                                    @onclick="TogglePassword" 
                                    aria-label="Toggle password visibility"
                                    disabled="@isLoading"
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-black transition-colors duration-200 disabled:opacity-50">
                                @if (_showPassword)
                                {
                                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.243 4.243L6.228 6.228" />
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5s-8.573-3.007-9.963-7.178z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                }
                            </button>
                        </div>
                        <ValidationMessage For="@(() => loginModel.Password)" class="text-red-500 text-sm mt-1" />
                    </div>

                    <div class="flex items-center">
                        <InputCheckbox @bind-Value="loginModel.RememberMe" 
                                       id="rememberMe" 
                                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                       disabled="@isLoading" />
                        <label for="rememberMe" class="ml-2 text-sm font-medium text-gray-300">
                            Remember me (1 day)
                        </label>
                    </div>

                    <button type="submit"
                            disabled="@isLoading"
                            class="w-full p-2.5 mt-5 text-white bg-yellow-500 hover:bg-green-500 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg px-5 py-2.5 text-center transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (isLoading)
                        {
                            <span class="flex items-center justify-center gap-2">
                                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                Logging in...
                            </span>
                        }
                        else
                        {
                            <span>Sign in</span>
                        }
                    </button>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="p-3 text-sm text-red-700 bg-red-100 rounded-lg border border-red-400">
                            @ErrorMessage
                        </div>
                    }
                </EditForm>
            </div>
        </div>
    </div>
</section>

@code {
    private LoginModel loginModel = new();
    private string ErrorMessage = "";
    private bool _showPassword = false;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthStateProvider.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Logger.LogInformation("User already authenticated, redirecting to home");
            Navigation.NavigateTo("/", replace: true);
        }
    }

    private async Task LoginAsync()
    {
        ErrorMessage = "";
        isLoading = true;
        StateHasChanged();

        try
        {
            // Input validation
            if (string.IsNullOrWhiteSpace(loginModel.UserName) || string.IsNullOrWhiteSpace(loginModel.Password))
            {
                ErrorMessage = "Username and password are required";    
                ToastService?.ShowWarning(ErrorMessage);
                return;
            }

            var response = await Http.PostAsJsonAsync("api/auth/login", new LoginRequest()
            {
                UserName = loginModel.UserName,
                Password = loginModel.Password,
                RememberMe = loginModel.RememberMe
            });
            
            if (response.IsSuccessStatusCode)
            {
                var loginResponse = await response.Content.ReadFromJsonAsync<MyApp.Core.Domain.LoginResponse>();
                
                if (loginResponse?.Success == true)
                {
                    // Create user session
                    var userSession = new UserSession
                    {
                        Username = loginResponse.UserName!,
                        Email = loginResponse.Email,
                        ExpiresAt = loginModel.RememberMe ? 
                            DateTime.UtcNow.AddDays(1) : DateTime.UtcNow.AddHours(3),
                        Roles = loginResponse.Roles ?? new List<string>(),
                        LoginTime = DateTime.UtcNow,
                        UserId = loginResponse.UserId.ToString(),
                    };

                    // Update authentication state
                    await AuthStateProvider.NotifyUserAuthentication(userSession);
                    
                    ToastService?.ShowSuccess($"Welcome back, {loginResponse.UserName}!");
                    Navigation.NavigateTo(loginResponse.RedirectUrl, forceLoad: true);
                    return;
                }
                
                ErrorMessage = loginResponse?.Message ?? "Login failed";
                ToastService?.ShowWarning(ErrorMessage);
            }
            else
            {
                var loginResponse = await response.Content.ReadFromJsonAsync<MyApp.Core.Domain.LoginResponse>();
                ErrorMessage = loginResponse?.Message ?? "Invalid username or password";
                ToastService?.ShowWarning(ErrorMessage);
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "An unexpected error occurred. Please try again.";
            ToastService?.ShowError(ErrorMessage);
            Logger.LogError(ex, $"Unexpected error during login for user {loginModel.UserName}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void TogglePassword()
    {
        _showPassword = !_showPassword;
    }

    private class LoginModel
    {
        public string UserName { get; set; } = "";
        public string Password { get; set; } = "";
        public bool RememberMe { get; set; } = false;
    }
}