@page "/users"
@using MyApp.Core.Entities
@using MyApp.Infrastructure.Identity
@using MyApp.Core.Interfaces
@using Microsoft.AspNetCore.Components.Forms
@inject IUserService UserService
@inject IRoleRepository RoleService
@inject ToastService ToastService
@inject IUserRoleService UserRoleService
@inject IPermissionService PermissionService
@inject NavigationManager NavigationManager

<PageTitle>User Management</PageTitle>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-gradient-to-br from-blue-600 to-blue-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-users fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Total Users</h2>
            <p class="text-2xl font-bold">@Users.Count</p>
        </div>
    </div>
    <div class="bg-gradient-to-br from-green-600 to-green-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-check-circle fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Active</h2>
            <p class="text-2xl font-bold">@Users.Count(u => !u.LockoutEnabled || u.LockoutEnd == null || u.LockoutEnd <= DateTimeOffset.Now)</p>
        </div>
    </div>
</div>

<div class="bg-white p-6 rounded-2xl shadow-xl border border-gray-100">
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between mb-6 border-b pb-4">
        <div>
            <h2 class="text-3xl font-extrabold text-gray-800 tracking-tight">User Management</h2>
            <p class="text-gray-500 mt-1">Manage user accounts and roles.</p>
        </div>
        <div class="flex items-center space-x-3 mt-4 md:mt-0 w-full md:w-auto">
            <div class="relative w-full md:w-64">
                <input value="@searchTerm" @oninput="HandleSearchTermChange"
                    class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-xl focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition"
                    placeholder="Search Username or Email..." />
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
            @if (CanCreate)
            {
                <button class="bg-green-600 hover:bg-green-700 text-white font-semibold px-5 py-2 rounded-xl shadow-md hover:shadow-lg transition-all duration-200 flex items-center gap-2"
                    @onclick="AddUser">
                    <i class="fas fa-plus"></i> Add User
                </button>
            }
        </div>
    </div>

    @if (Loading)
    {
        <div class="col-span-full text-center py-10 text-gray-500">
            <i class="fas fa-spinner fa-spin fa-2x mb-3"></i>
            <p class="text-lg">Loading users...</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto rounded-xl shadow-md border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-b from-blue-700 to-black">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Username</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Role</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var u in PagedUsers)
                    {
                        var isActive = !u.LockoutEnabled || u.LockoutEnd == null || u.LockoutEnd <= DateTimeOffset.Now;
                        var userRole = UserRolesCache.ContainsKey(u.Id) 
                            ? UserRolesCache[u.Id].FirstOrDefault() ?? "No Role" 
                            : "No Role";
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@u.UserName</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-700">@u.Email</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                    @userRole
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@(isActive ? "bg-green-100 text-green-700 px-2 py-1 rounded-full" : "bg-red-100 text-red-700 px-2 py-1 rounded-full")">
                                    @(isActive ? "Active" : "Locked")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                @if (CanView)
                                {
                                    <button class="text-green-600 hover:text-green-800 p-2 rounded-lg hover:bg-green-100 transition"
                                        @onclick="() => ShowDetail(u)">
                                        <i class="fas fa-eye mr-1"></i> Detail
                                    </button>
                                }
                                @if (CanUpdate)
                                {
                                    <button class="text-indigo-600 hover:text-indigo-900 p-2 rounded-lg hover:bg-indigo-100 transition"
                                        @onclick="() => EditUser(u)">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </button>
                                }
                                @if (CanDelete)
                                {
                                    <button class="text-red-600 hover:text-red-900 p-2 rounded-lg hover:bg-red-100 transition"
                                        @onclick="() => ConfirmDelete(u.Id.ToString(), u.UserName)">
                                        <i class="fas fa-trash-alt mr-1"></i> Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!FilteredUsers.Any() && !Loading)
        {
            <div class="col-span-full text-center py-10 text-gray-500">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p class="text-lg">No Users found.</p>
            </div>
        }
    }

    @* Pagination - sama seperti sebelumnya *@
    @if (FilteredUsers.Any() && !Loading && TotalPages > 1)
    {
        <div class="mt-8 flex justify-between items-center p-4 bg-gray-50 rounded-xl shadow-inner">
            <span class="text-sm text-gray-600">
                Showing <strong>@((CurrentPage - 1) * PageSize + 1)</strong> to <strong>@(Math.Min(CurrentPage * PageSize, FilteredUsers.Count()))</strong> of <strong>@FilteredUsers.Count()</strong> entries
            </span>
            <div class="flex space-x-2">
                <button class="px-4 py-2 text-sm rounded-lg border @(CurrentPage == 1 ? "bg-gray-200 text-gray-500 cursor-not-allowed" : "bg-white hover:bg-gray-100 text-gray-700")"
                    @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">
                    <i class="fas fa-chevron-left"></i> Previous
                </button>
                @for (int i = 1; i <= TotalPages; i++)
                {
                    var pageNumber = i;
                    <button class="px-4 py-2 text-sm rounded-lg font-medium @(i == CurrentPage ? "bg-blue-600 text-white shadow-md" : "bg-white hover:bg-blue-50 border text-gray-700")"
                        @onclick="() => ChangePage(pageNumber)">@i</button>
                }
                <button class="px-4 py-2 text-sm rounded-lg border @(CurrentPage == TotalPages ? "bg-gray-200 text-gray-500 cursor-not-allowed" : "bg-white hover:bg-gray-100 text-gray-700")"
                    @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">
                    Next <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    }

    @* Modal untuk Add/Edit/Detail *@
    @if (ShowModal)
    {
        <div class="fixed inset-0 bg-black/60 flex items-center justify-center z-50 p-4 transition-opacity duration-300 ease-out">
            <div class="bg-white rounded-xl shadow-2xl w-full max-w-3xl relative animate-zoom-in">
                <div class="border-b px-6 py-4 flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-800">@ModalTitle</h2>
                    <button class="text-gray-400 hover:text-gray-600" @onclick="() => ShowModal = false">
                        <i class="fas fa-times fa-lg"></i>
                    </button>
                </div>
                @if (ModalMode == "Detail")
                {
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700">
                            <div class="space-y-4">
                                <h3 class="text-xl font-semibold text-gray-900 border-b pb-2">User Info</h3>
                                <p><strong>Username:</strong> @SelectedUser.UserName</p>
                                <p><strong>Email:</strong> @SelectedUser.Email</p>
                                <p><strong>Phone:</strong> @SelectedUser.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="button" class="bg-gray-700 hover:bg-gray-800 text-white font-semibold px-5 py-2 rounded-lg transition" @onclick="() => ShowModal = false">Close</button>
                        </div>
                    </div>
                }
                else
                {
                    <EditForm Model="@SelectedUser" OnValidSubmit="SaveUser" class="p-6">
                        <DataAnnotationsValidator />
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-1">Username</label>
                                <InputText class="w-full border border-gray-300 px-4 py-2 rounded-lg focus:border-blue-500" 
                                    @bind-Value="SelectedUser.UserName" placeholder="Username" />
                                @if (UsernameError != null)
                                {
                                    <div class="mt-1 text-xs text-red-600">@UsernameError</div>
                                }
                            </div>
                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-1">Email</label>
                                <InputText type="email" class="w-full border border-gray-300 px-4 py-2 rounded-lg focus:border-blue-500" 
                                    @bind-Value="SelectedUser.Email" placeholder="Email" />
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-1">
                                    Password @(ModalMode == "Edit" ? "(Leave blank to keep current)" : "")
                                </label>
                                <div class="relative">
                                    <InputText type="@(ShowPassword ? "text" : "password")"
                                               class="w-full border border-gray-300 px-4 py-2 rounded-lg focus:border-blue-500 pr-10"
                                               @bind-Value="Password"
                                               placeholder="Password" />
                                    <button type="button"
                                            class="absolute right-2 top-2 text-gray-500 hover:text-gray-700"
                                            @onclick="TogglePassword">
                                        <i class="fas @(ShowPassword ? "fa-eye-slash" : "fa-eye")"></i>
                                    </button>
                                </div>
                                <div class="mt-2 flex items-center gap-2">
                                    <span class="text-xs text-gray-500">Min. 12 karakter, max. 18, harus ada huruf besar, kecil, angka, dan simbol</span>
                                    <button type="button" class="ml-2 text-blue-600 text-xs underline" @onclick="SuggestPassword">
                                        Suggest Password
                                    </button>
                                </div>
                                @if (!string.IsNullOrEmpty(SuggestedPassword))
                                {
                                    <div class="mt-1 text-xs text-green-600">
                                        Suggestion: <span class="font-mono bg-gray-100 px-2 py-1 rounded">@SuggestedPassword</span>
                                        <button type="button" class="ml-2 text-blue-600 underline" @onclick="UseSuggestedPassword">Use</button>
                                    </div>
                                }
                                @if (PasswordError != null)
                                {
                                    <div class="mt-1 text-xs text-red-600">@PasswordError</div>
                                }
                            </div>
                            <div>
                                <label class="block text-gray-700 text-sm font-medium mb-1">Role</label>
                                <select @bind="SelectedRole" class="w-full border border-gray-300 px-4 py-2 rounded-lg focus:border-blue-500">
                                    <option value="">Select Role</option>
                                    @foreach (var role in AvailableRoles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end gap-3 border-t pt-4">
                            <button type="button" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-5 py-2 rounded-lg transition" 
                                @onclick="() => ShowModal = false">
                                <i class="fas fa-ban"></i> Cancel
                            </button>
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg transition">
                                <i class="fas fa-save"></i> Save User
                            </button>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    }

    @* Confirmation Modal *@
    @if (ShowConfirmModal)
    {
        <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
            <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2 text-red-600">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Delete
                </h3>
                <p class="text-gray-700 mb-6">@ConfirmMessage</p>
                <div class="flex justify-end space-x-3">
                    <button class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg text-gray-700 font-medium" @onclick="CancelDelete">Cancel</button>
                    <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium" @onclick="DeleteConfirmed">Delete</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ApplicationUser> Users = new();
    private bool Loading = true;
    private Dictionary<int, List<string>> UserRolesCache = new();
    private string searchTerm = string.Empty;
    private bool ShowModal;
    private string ModalTitle = "";
    private string ModalMode = "";
    private ApplicationUser SelectedUser = new();
    private string Password = "";
    private bool ShowConfirmModal;
    private string ConfirmMessage = "";
    private string UserIdToDelete = "";
    private int CurrentPage = 1;
    private const int PageSize = 10;
    private int TotalPages => (int)Math.Ceiling(FilteredUsers.Count() / (double)PageSize);

    private List<string> AvailableRoles = new();
    private string SelectedRole = "";

    private bool CanView = false;
    private bool CanCreate = false;
    private bool CanUpdate = false;
    private bool CanDelete = false;

    private bool ShowPassword = false;
    private string SuggestedPassword = "";
    private string? PasswordError = null;
    private string? UsernameError = null;

    private bool IsUsernameValid(string username)
    {
        if (string.IsNullOrWhiteSpace(username) || username.Length < 3 || username.Length > 8)
            return false;
        if (username.Any(char.IsWhiteSpace))
            return false;
        // Only allow lowercase letters and digits
        if (!username.All(c => char.IsLower(c) || char.IsDigit(c)))
            return false;
        return true;
    }

    protected override async Task OnInitializedAsync()
    {
        // Check permissions first
        CanView = await PermissionService.HasPermissionAsync("users", "view");
        if (!CanView)
        {
            NavigationManager.NavigateTo("/unauthorized");
            return;
        }

        CanCreate = await PermissionService.HasPermissionAsync("users", "create");
        CanUpdate = await PermissionService.HasPermissionAsync("users", "update");
        CanDelete = await PermissionService.HasPermissionAsync("users", "delete");

        // Only load data if user has view permission
        await LoadUsers();
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        AvailableRoles = await UserRoleService.GetAvailableRolesAsync();
    }

    private async Task LoadUsers()
    {
        Loading = true;
        try 
        {
            Users = await UserService.GetAllUsersAsync();
            
            // Load all user roles at once
            UserRolesCache.Clear();
            foreach (var user in Users)
            {
                var roles = await UserRoleService.GetUserRolesAsync(user.Id.ToString());
                UserRolesCache[user.Id] = roles;
            }
        }
        finally
        {
            Loading = false;
            CurrentPage = 1;
        }
    }

    private IEnumerable<ApplicationUser> FilteredUsers =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? Users
            : Users.Where(u =>
                (u.UserName ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (u.Email ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private IEnumerable<ApplicationUser> PagedUsers =>
        FilteredUsers.Skip((CurrentPage - 1) * PageSize).Take(PageSize);

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            CurrentPage = page;
        }
    }

    private void HandleSearchTermChange(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void AddUser()
    {
        SelectedUser = new ApplicationUser();
        Password = "";
        ModalMode = "Add";
        ModalTitle = "Add New User";
        ShowModal = true;
    }

    private async Task EditUser(ApplicationUser user)
    {
        SelectedUser = new ApplicationUser
        {
            Id = user.Id,
            UserName = user.UserName,
            Email = user.Email,
            PhoneNumber = user.PhoneNumber
        };
        Password = "";
        
        // Get role from cache
        SelectedRole = UserRolesCache.ContainsKey(user.Id) 
            ? UserRolesCache[user.Id].FirstOrDefault() ?? ""
            : "";
    
        ModalMode = "Edit";
        ModalTitle = "Edit User";
        ShowModal = true;
    }

    private void ShowDetail(ApplicationUser user)
    {
        SelectedUser = user;
        ModalMode = "Detail";
        ModalTitle = $"User Detail: {user.UserName}";
        ShowModal = true;
    }

    private void CancelDelete() => ShowConfirmModal = false;

    private void ConfirmDelete(string id, string? name)
    {
        UserIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        if (!CanDelete)
        {
            await ToastService.ShowError("You don't have permission to delete");
            return;
        }
        try
        {
            await UserService.DeleteUserAsync(UserIdToDelete);
            await LoadUsers();
            await ToastService.ShowInfo("User deleted successfully!");
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            ShowConfirmModal = false;
        }
    }

    private void TogglePassword()
    {
        ShowPassword = !ShowPassword;
    }

    private void SuggestPassword()
    {
        SuggestedPassword = GenerateStrongPassword(12, 18);
    }

    private void UseSuggestedPassword()
    {
        Password = SuggestedPassword;
    }

    private string GenerateStrongPassword(int minLength, int maxLength)
    {
        var rnd = new Random();
        int length = rnd.Next(minLength, maxLength + 1);

        const string upper = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        const string lower = "abcdefghijklmnopqrstuvwxyz";
        const string digits = "0123456789";
        const string symbols = "!@#$%^&*()-_=+[]{}|;:,.<>?";

        // Ensure at least one of each
        var chars = new List<char>
        {
            upper[rnd.Next(upper.Length)],
            lower[rnd.Next(lower.Length)],
            digits[rnd.Next(digits.Length)],
            symbols[rnd.Next(symbols.Length)]
        };

        string allChars = upper + lower + digits + symbols;
        for (int i = chars.Count; i < length; i++)
        {
            chars.Add(allChars[rnd.Next(allChars.Length)]);
        }

        // Shuffle
        return new string(chars.OrderBy(_ => rnd.Next()).ToArray());
    }

    private bool IsPasswordValid(string password)
    {
        if (string.IsNullOrWhiteSpace(password) || password.Length < 12 || password.Length > 18)
            return false;
        if (password.Any(char.IsWhiteSpace))
            return false;
        if (!password.Any(char.IsUpper)) return false;
        if (!password.Any(char.IsLower)) return false;
        if (!password.Any(char.IsDigit)) return false;
        if (!password.Any(c => "!@#$%^&*()-_=+[]{}|;:,.<>?".Contains(c))) return false;
        return true;
    }

    private async Task SaveUser()
    {
        PasswordError = null;
        UsernameError = null;

        if ((ModalMode == "Add" && !CanCreate) || (ModalMode == "Edit" && !CanUpdate))
        {
            await ToastService.ShowError("You don't have permission to perform this action");
            return;
        }

        if (!IsUsernameValid(SelectedUser.UserName ?? ""))
        {
            UsernameError = "Username must be 3-8 lowercase letters, no symbols, whitespace, or special characters.";
            return;
        }

        if (string.IsNullOrWhiteSpace(SelectedRole))
        {
            await ToastService.ShowWarning("Role is required.");
            return;
        }

        // Password validation only on Add or if changed
        if (ModalMode == "Add" || (!string.IsNullOrWhiteSpace(Password)))
        {
            if (!IsPasswordValid(Password))
            {
                PasswordError = "Password must be 12-18 characters, contain uppercase, lowercase, digit, and symbol.";
                return;
            }
        }

        try
        {
            if (string.IsNullOrEmpty(SelectedUser.Id.ToString()) || SelectedUser.Id == 0)
            {
                // Create user
                var created = await UserService.CreateUserAsync(SelectedUser, Password);
                if (created)
                {
                    var userFromDb = await UserService.GetUserByUsernameAsync(SelectedUser.UserName);
                    if (userFromDb == null)
                    {
                        userFromDb = (await UserService.GetAllUsersAsync())
                            .FirstOrDefault(u => u.Email == SelectedUser.Email);
                    }
                    if (userFromDb != null)
                    {
                        await UserRoleService.UpdateUserRoleAsync(userFromDb.Id.ToString(), SelectedRole);
                    }
                    await ToastService.ShowSuccess("User added successfully!");
                    await LoadUsers();
                }
                else
                {
                    await ToastService.ShowError("Failed to create user.");
                }
            }
            else
            {
                await UserService.UpdateUserAsync(SelectedUser);

                var roles = await UserRoleService.GetUserRolesAsync(SelectedUser.Id.ToString());
                UserRolesCache[SelectedUser.Id] = roles;

                await LoadUsers();
                await ToastService.ShowInfo("User updated successfully!");
            }
            ShowModal = false;
        }
        catch (Exception ex)
        {
            await ToastService.ShowError($"Error: {ex.Message}");
        }
    }
}
