@page "/inventory-history"
@using MyApp.Core.Entities
@using MyApp.Core.Interfaces
@using Microsoft.AspNetCore.Components.Web
@inject IInventoryHistoryRepository InventoryHistoryService

<PageTitle>Inventory History</PageTitle>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-gradient-to-br from-blue-600 to-blue-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-history fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Total Histories</h2>
            <p class="text-2xl font-bold">@Histories?.Count()</p>
        </div>
    </div>
    <div class="bg-gradient-to-br from-green-600 to-green-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-box-open fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Borrowed</h2>
            <p class="text-2xl font-bold">@Histories?.Count(h => h.Action == "Borrowed")</p>
        </div>
    </div>
    <div class="bg-gradient-to-br from-red-600 to-red-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-undo fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Returned</h2>
            <p class="text-2xl font-bold">@Histories?.Count(h => h.Action == "Returned")</p>
        </div>
    </div>
    <div class="bg-gradient-to-br from-yellow-600 to-yellow-900 text-white p-5 rounded-2xl shadow-lg flex items-center gap-4">
        <div class="bg-white/20 rounded-full p-3"><i class="fas fa-clock fa-2x"></i></div>
        <div>
            <h2 class="text-lg font-semibold">Active</h2>
            <p class="text-2xl font-bold">@Histories?.Count(h => h.Status != "Completed" && h.Status != "Returned")</p>
        </div>
    </div>
</div>

<div class="bg-white p-6 rounded-2xl shadow-xl border border-gray-100">
    <div class="flex flex-col md:flex-row items-start md:items-center justify-between mb-6">
        <div>
            <h2 class="text-3xl font-extrabold text-gray-800 tracking-tight">Inventory History</h2>
            <p class="text-gray-500 mt-1">Timeline of inventory borrow/return actions.</p>
        </div>
        <div class="mt-4 md:mt-0 flex items-center gap-3 w-full md:w-auto">
            <div class="relative w-full md:w-72">
                <input value="@SearchTerm" @oninput="HandleSearchTermChange"
                    class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-xl focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition"
                    placeholder="Search by item, code, borrower, action..." />
                <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
            </div>
        </div>
    </div>

    <div class="overflow-x-auto rounded-xl shadow-md border border-gray-200">
        @if (Loading)
        {
            <div class="p-8 text-center text-gray-500">
                <i class="fas fa-spinner fa-spin fa-2x mb-3"></i>
                <p class="text-lg">Loading history...</p>
            </div>
        }
        else if (!FilteredHistories.Any())
        {
            <div class="p-8 text-center text-gray-500">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <p class="text-lg">No history records found.</p>
            </div>
        }
        else
        {
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-b from-blue-700 to-black">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Item Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Code</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Borrower</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Action</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Start Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">End Date</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var history in FilteredHistories)
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">@history.ItemName</td>
                            <td class="px-6 py-4 whitespace-nowrap">@history.Code</td>
                            <td class="px-6 py-4 whitespace-nowrap">@history.BorrowerName</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 rounded-full text-sm font-semibold @GetActionClass(history.Action)">@history.Action</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">@history.StartDate.ToShortDateString()</td>
                            <td class="px-6 py-4 whitespace-nowrap">@(history.EndDate?.ToShortDateString() ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <button class="text-blue-600 hover:text-blue-800 p-2 rounded-lg hover:bg-blue-100 transition" @onclick="() => ShowDetail(history)">
                                    <i class="fas fa-eye mr-1"></i> Detail
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    @if (ShowModal && SelectedHistory != null)
    {
        <div class="fixed inset-0 bg-black/60 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-xl shadow-2xl w-full max-w-3xl relative overflow-hidden">
                <div class="absolute -right-20 -top-20 opacity-10 pointer-events-none">
                    <img src="/assets/images/mock.png" class="w-72 h-72 object-cover" alt="watermark" />
                </div>
                <div class="border-b px-6 py-4 flex justify-between items-center bg-white">
                    <h2 class="text-2xl font-bold text-gray-800">History Detail</h2>
                    <button class="text-gray-400 hover:text-gray-600" @onclick="() => ShowModal = false">
                        <i class="fas fa-times fa-lg"></i>
                    </button>
                </div>
                <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6 text-gray-700">
                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-gray-900">Item</h3>
                        <p><strong>Name:</strong> @SelectedHistory.ItemName</p>
                        <p><strong>Code:</strong> @SelectedHistory.Code</p>
                        <p><strong>Borrower:</strong> @SelectedHistory.BorrowerName</p>
                        <p><strong>Action:</strong> <span class="px-2 py-1 rounded-full text-sm font-semibold @GetActionClass(SelectedHistory.Action)">@SelectedHistory.Action</span></p>
                        <p><strong>Status:</strong> @SelectedHistory.Status</p>
                    </div>
                    <div class="space-y-3">
                        <h3 class="text-lg font-semibold text-gray-900">Timeline</h3>
                        <p><strong>Start Date:</strong> @SelectedHistory.StartDate.ToString("dd MMM yyyy HH:mm")</p>
                        <p><strong>End Date:</strong> @(SelectedHistory.EndDate?.ToString("dd MMM yyyy HH:mm") ?? "-")</p>
                        <p><strong>Performed By:</strong> @SelectedHistory.PerformedBy</p>
                        <p><strong>Description:</strong> @(string.IsNullOrWhiteSpace(SelectedHistory.Description) ? "-" : SelectedHistory.Description)</p>
                    </div>
                </div>
                <div class="mt-6 flex justify-end p-6 bg-gray-50">
                    <button class="bg-gray-700 hover:bg-gray-800 text-white font-semibold px-5 py-2 rounded-lg transition" @onclick="() => ShowModal = false">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool Loading = true;
    private bool ShowModal = false;
    private List<InventoryHistory> Histories = new();
    private InventoryHistory? SelectedHistory;
    private string SearchTerm { get; set; } = string.Empty;

    private IEnumerable<InventoryHistory> FilteredHistories =>
        string.IsNullOrWhiteSpace(SearchTerm) ? Histories : Histories.Where(h =>
            (h.ItemName ?? "").Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            (h.Code ?? "").Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            (h.BorrowerName ?? "").Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            (h.Action ?? "").Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)
        );

    protected override async Task OnInitializedAsync()
    {
        Loading = true;
        Histories = await InventoryHistoryService.GetAllAsync();
        Loading = false;
    }

    private void ShowDetail(InventoryHistory history)
    {
        SelectedHistory = history;
        ShowModal = true;
    }

    private void HandleSearchTermChange(ChangeEventArgs e)
    {
        SearchTerm = e.Value?.ToString() ?? string.Empty;
    }

    private string GetActionClass(string? action) => (action ?? "") switch
    {
        "Borrowed" => "bg-yellow-100 text-yellow-800",
        "Returned" => "bg-green-100 text-green-800",
        "Completed" => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };
}