@page "/master-data/rank"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IRankRepository RankService
@inject ToastService ToastService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Rank Management</h2>
            <p class="text-gray-600 mt-1">Manage User Rank and Privillage</p>
        </div>
        <div class="flex items-center">
            <button
                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                @onclick="ShowAddRankModal">
                + Add Rank
            </button>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gradient-to-b from-red-700  to-black">
                <tr>
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Rank Name
                    </th>
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Details</th>
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Status
                    </th>
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Ranks == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else if (!Ranks.Any())
                {
                    <tr>
                        <td colspan="8" class="p-8">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <img src="assets/images/empty-data.png" alt="No data" class="h-32 w-32 mb-4" />
                                <div>No Data</div>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var Rank in Ranks)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@Rank.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Rank.Details</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(Rank.IsActive)">
                                    @(Rank.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                    @onclick="() => EditRank(Rank)">
                                    Edit
                                </button>
                                <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                    @onclick="() => ConfirmDelete(Rank.Id, Rank.Name)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit Rank -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewRank.Id == 0) ? "Add New Rank" : "Edit Rank")</h3>

            <div class="space-y-4">
                <input @bind="NewRank.Name" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="Rank Name" />
                <input @bind="NewRank.Details" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="Details" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewRank.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg" @onclick="SaveNewRank">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg"
                    @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}


@code {

    private List<Rank>? Ranks;
    private bool ShowAddModal = false;
    private Rank NewRank = new Rank();
    private bool ShowConfirmModal = false;
    private int RankIdToDelete;
    private string ConfirmMessage = "";

    protected override async Task OnInitializedAsync()
    {
        Ranks = await RankService.GetAllAsync();
        ShowAddModal = false;
    }
    private void ShowAddRankModal()
    {
        NewRank = new Rank(); // reset form
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditRank(Rank Rank)
    {
        NewRank = new Rank
        {
            Id = Rank.Id,
            Name = Rank.Name,
            Details = Rank.Details,
            IsActive = Rank.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        RankIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the Rank \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        await RankService.DeleteAsync(RankIdToDelete);
        Ranks = await RankService.GetAllAsync();
        ShowConfirmModal = false;
        ToastService.ShowSuccess("Success deleted!");
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private async Task SaveNewRank()
    {
        if (NewRank.Id == 0)
            await RankService.AddAsync(NewRank);
        else
            await RankService.UpdateAsync(NewRank);

        Ranks = await RankService.GetAllAsync();
        NewRank = new Rank();
        ShowAddModal = false;
        ToastService.ShowSuccess("Data Saved!");
    }

    private string GetStatusClasses(bool isActive) =>
    isActive
    ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
    : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";
}