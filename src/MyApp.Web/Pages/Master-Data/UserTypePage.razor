@page "/master-data/user-type"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IUserTypeRepository UserTypeService
@inject ToastService ToastService
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">UserType Management</h2>
            <p class="text-gray-600 mt-1">Manage User UserType and Privillage</p>
        </div>
        <div class="flex items-center">
            @if (CanCreate)
            {
                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                        @onclick="ShowAddUserTypeModal">
                    + Add UserType
                </button>
            }
        </div>
    </div>

    <div class="overflow-x-auto">
         <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gradient-to-b from-red-700  to-black">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        UserType Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Details
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Status
                    </th>
                    @if (CanUpdate || CanDelete)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                            Action
                        </th>
                    }
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (UserTypes == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else if (!UserTypes.Any())
                {
                    <tr>
                        <td colspan="8" class="p-8">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <img src="assets/images/empty-data.png" alt="No data" class="h-32 w-32 mb-4" />
                                <div>No Data</div>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var UserType in UserTypes)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@UserType.TypeName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@UserType.Details</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(UserType.IsActive)">
                                    @(UserType.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            @if (CanUpdate || CanDelete)
                            {
                                <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                    @if (CanUpdate)
                                    {
                                        <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                                @onclick="() => EditUserType(UserType)">
                                            Edit
                                        </button>
                                    }
                                    @if (CanDelete)
                                    {
                                        <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                                @onclick="() => ConfirmDelete(UserType.Id, UserType.TypeName)">
                                            Delete
                                        </button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit UserType -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewUserType.Id == 0) ? "Add New UserType" : "Edit UserType")</h3>

            <div class="space-y-4">
                <input @bind="NewUserType.TypeName" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="UserType Name" />
                <input @bind="NewUserType.Details" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="Details" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewUserType.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg" @onclick="SaveNewUserType">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg"
                    @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}

<ToastContainer @ref="toastContainer" />

@code {
    private ToastContainer? toastContainer;

    private List<UserType>? UserTypes;
    private bool ShowAddModal = false;
    private UserType NewUserType = new UserType();
    private bool ShowConfirmModal = false;
    private int UserTypeIdToDelete;
    private string ConfirmMessage = "";

    private bool CanView = false;
    private bool CanCreate = false;
    private bool CanUpdate = false;
    private bool CanDelete = false;

    protected override async Task OnInitializedAsync()
    {
        // Check permissions first
        CanView = await PermissionService.HasPermissionAsync("user-type", "view");
        if (!CanView)
        {
            NavigationManager.NavigateTo("/unauthorized");
            return;
        }

        CanCreate = await PermissionService.HasPermissionAsync("user-type", "create");
        CanUpdate = await PermissionService.HasPermissionAsync("user-type", "update");
        CanDelete = await PermissionService.HasPermissionAsync("user-type", "delete");

        // Load data only if user has view permission
        UserTypes = await UserTypeService.GetAllAsync();
        ShowAddModal = false;
    }

    private void ShowAddUserTypeModal()
    {
        if (!CanCreate)
        {
            ToastService.ShowError("You don't have permission to add new user types");
            return;
        }

        NewUserType = new UserType();
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditUserType(UserType userType)
    {
        if (!CanUpdate)
        {
            ToastService.ShowError("You don't have permission to edit user types");
            return;
        }

        NewUserType = new UserType
        {
            Id = userType.Id,
            TypeName = userType.TypeName,
            Details = userType.Details,
            IsActive = userType.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete user types");
            return;
        }

        UserTypeIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the UserType \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete user types");
            return;
        }

        try
        {
            await UserTypeService.DeleteAsync(UserTypeIdToDelete);
            UserTypes = await UserTypeService.GetAllAsync();
            ShowConfirmModal = false;
            ToastService.ShowSuccess("Success deleted!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private async Task SaveNewUserType()
    {
        if (NewUserType.Id == 0 && !CanCreate)
        {
            ToastService.ShowError("You don't have permission to create new user types");
            return;
        }
        else if (NewUserType.Id != 0 && !CanUpdate)
        {
            ToastService.ShowError("You don't have permission to update user types");
            return;
        }

        try
        {
            if (NewUserType.Id == 0)
                await UserTypeService.AddAsync(NewUserType);
            else
                await UserTypeService.UpdateAsync(NewUserType);

            UserTypes = await UserTypeService.GetAllAsync();
            NewUserType = new UserType();
            ShowAddModal = false;
            ToastService.ShowSuccess("Data Saved!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private string GetStatusClasses(bool isActive) =>
    isActive
    ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
    : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";
}