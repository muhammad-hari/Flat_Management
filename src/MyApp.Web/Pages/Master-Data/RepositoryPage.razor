@page "/master-data/repository"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IRepositoryRepository RepositoryService
@inject ToastService ToastService
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Repository Management</h2>
            <p class="text-gray-600 mt-1">Manage User Repository and Privillage</p>
        </div>
        <div class="flex items-center">
            @if (CanCreate)
            {
                <button
                    class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                    @onclick="ShowAddRepositoryModal">
                    + Add Repository
                </button>
            }
        </div>
    </div>

    <div class="overflow-x-auto">
         <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gradient-to-b from-red-700  to-black">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Repository Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">
                        Details</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Status
                    </th>
                    @if (CanUpdate || CanDelete)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Action
                        </th>
                    }
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Repositorys == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else if (!Repositorys.Any())
                {
                    <tr>
                        <td colspan="8" class="p-8">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <img src="assets/images/empty-data.png" alt="No data" class="h-32 w-32 mb-4" />
                                <div>No Data</div>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var Repository in Repositorys)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@Repository.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@Repository.Details</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(Repository.IsActive)">
                                    @(Repository.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            @if (CanUpdate || CanDelete)
                            {
                                <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                    @if (CanUpdate)
                                    {
                                        <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                            @onclick="() => EditRepository(Repository)">
                                            Edit
                                        </button>
                                    }
                                    @if (CanDelete)
                                    {
                                        <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                            @onclick="() => ConfirmDelete(Repository.Id, Repository.Name)">
                                            Delete
                                        </button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit Repository -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewRepository.Id == 0) ? "Add New Repository" : "Edit Repository")</h3>

            <div class="space-y-4">
                <input @bind="NewRepository.Name" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="Repository Name" />
                <input @bind="NewRepository.Details" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="Details" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewRepository.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg" @onclick="SaveNewRepository">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg"
                    @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}

<ToastContainer @ref="toastContainer" />

@code {
    private ToastContainer? toastContainer;

    private List<Repository>? Repositorys;
    private bool ShowAddModal = false;
    private Repository NewRepository = new Repository();
    private bool ShowConfirmModal = false;
    private int RepositoryIdToDelete;
    private string ConfirmMessage = "";

    // Permission properties
    private bool CanView = false;
    private bool CanCreate = false;
    private bool CanUpdate = false;
    private bool CanDelete = false;

    protected override async Task OnInitializedAsync()
    {
        // Check permissions first
        CanView = await PermissionService.HasPermissionAsync("repositories", "view");
        if (!CanView)
        {
            NavigationManager.NavigateTo("/unauthorized");
            return;
        }

        CanCreate = await PermissionService.HasPermissionAsync("repositories", "create");
        CanUpdate = await PermissionService.HasPermissionAsync("repositories", "update");
        CanDelete = await PermissionService.HasPermissionAsync("repositories", "delete");

        Repositorys = await RepositoryService.GetAllAsync();
        ShowAddModal = false;
    }

    private void ShowAddRepositoryModal()
    {
        if (!CanCreate)
        {
            ToastService.ShowError("You don't have permission to add new repository");
            return;
        }

        NewRepository = new Repository(); // reset form
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditRepository(Repository Repository)
    {
        if (!CanUpdate)
        {
            ToastService.ShowError("You don't have permission to edit repository");
            return;
        }

        NewRepository = new Repository
        {
            Id = Repository.Id,
            Name = Repository.Name,
            Details = Repository.Details,
            IsActive = Repository.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete repository");
            return;
        }

        RepositoryIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the Repository \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete repository");
            return;
        }

        await RepositoryService.DeleteAsync(RepositoryIdToDelete);
        Repositorys = await RepositoryService.GetAllAsync();
        ShowConfirmModal = false;
        ToastService.ShowInfo("Data Deleted!");
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private async Task SaveNewRepository()
    {
        if (NewRepository.Id == 0 && !CanCreate)
        {
            ToastService.ShowError("You don't have permission to create new repository");
            return;
        }
        else if (NewRepository.Id != 0 && !CanUpdate)
        {
            ToastService.ShowError("You don't have permission to update repository");
            return;
        }

        if (NewRepository.Id == 0)
            await RepositoryService.AddAsync(NewRepository);
        else
            await RepositoryService.UpdateAsync(NewRepository);

        Repositorys = await RepositoryService.GetAllAsync();
        NewRepository = new Repository();
        ShowAddModal = false;
        ToastService.ShowSuccess("Data Saved!");
    }

    private string GetStatusClasses(bool isActive) =>
        isActive
        ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
        : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";
}