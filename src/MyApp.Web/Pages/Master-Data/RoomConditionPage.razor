@page "/master-data/room-condition"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IRoomConditionRepository RoomConditionService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Room Condition Management</h2>
            <p class="text-gray-600 mt-1">Manage User Room Condition and Privillage</p>
        </div>
        <div class="flex items-center">
            <button
                class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                @onclick="ShowAddRoomConditionModal">
                + Add RoomCondition
            </button>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Room Condition Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Details</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (RoomConditions == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else if (!RoomConditions.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center p-4 text-gray-500 italic">Data not found</td>
                    </tr>
                }
                else
                {
                    @foreach (var RoomCondition in RoomConditions)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@RoomCondition.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@RoomCondition.Details</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(RoomCondition.IsActive)">
                                    @(RoomCondition.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                    @onclick="() => EditRoomCondition(RoomCondition)">
                                    Edit
                                </button>
                                <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                    @onclick="() => ConfirmDelete(RoomCondition.Id, RoomCondition.Name)">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit RoomCondition -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewRoomCondition.Id == 0) ? "Add New RoomCondition" :
                            "Edit RoomCondition")</h3>

            <div class="space-y-4">
                <input @bind="NewRoomCondition.Name" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                    placeholder="RoomCondition Name" />
                <input @bind="NewRoomCondition.Details"
                    class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500" placeholder="Details" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewRoomCondition.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg"
                    @onclick="SaveNewRoomCondition">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg"
                    @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}

<ToastContainer @ref="toastContainer" />

@code {
    private ToastContainer? toastContainer;

    private List<RoomCondition>? RoomConditions;
    private bool ShowAddModal = false;
    private RoomCondition NewRoomCondition = new RoomCondition();
    private bool ShowConfirmModal = false;
    private int RoomConditionIdToDelete;
    private string ConfirmMessage = "";

    protected override async Task OnInitializedAsync()
    {
        RoomConditions = await RoomConditionService.GetAllAsync();
        ShowAddModal = false;
    }

    private void ShowAddRoomConditionModal()
    {
        NewRoomCondition = new RoomCondition(); // reset form
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditRoomCondition(RoomCondition RoomCondition)
    {
        NewRoomCondition = new RoomCondition
        {
            Id = RoomCondition.Id,
            Name = RoomCondition.Name,
            Details = RoomCondition.Details,
            IsActive = RoomCondition.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        RoomConditionIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the RoomCondition \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        await RoomConditionService.DeleteAsync(RoomConditionIdToDelete);
        RoomConditions = await RoomConditionService.GetAllAsync();
        ShowConfirmModal = false;
        toastContainer?.ShowToast("Data berhasil dihapus!", "success");
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private async Task SaveNewRoomCondition()
    {
        if (NewRoomCondition.Id == 0)
            await RoomConditionService.AddAsync(NewRoomCondition);
        else
            await RoomConditionService.UpdateAsync(NewRoomCondition);

        RoomConditions = await RoomConditionService.GetAllAsync();
        NewRoomCondition = new RoomCondition();
        ShowAddModal = false;
        toastContainer?.ShowToast("Data berhasil disimpan!", "success");
    }

    private string GetStatusClasses(bool isActive) =>
    isActive
    ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
    : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";
}