@page "/master-data/position"
@using MyApp.Web.Shared
@using MyApp.Core.Interfaces
@using MyApp.Core.Entities
@inject IPositionRepository PositionService
@inject ToastService ToastService
@inject NavigationManager NavigationManager
@inject IPermissionService PermissionService

<div class="bg-white rounded-lg shadow-sm p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Position Management</h2>
            <p class="text-gray-600 mt-1">Manage employee positions and hierarchies</p>
        </div>
        <div class="flex items-center">
            @if (CanCreate)
            {
                <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors duration-200"
                        @onclick="ShowAddPositionModal">
                    + Add Position
                </button>
            }
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gradient-to-b from-red-700  to-black">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Position Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Department</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Level</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Status</th>
                    @if (CanUpdate || CanDelete)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-white">Action</th>
                    }
                </tr>
            </thead>
            <tbody class="bg-gray divide-y divide-gray-200">
                @if (Positions == null)
                {
                    <tr>
                        <td colspan="5" class="text-center p-4">Loading...</td>
                    </tr>
                }
                else if (!Positions.Any())
                {
                    <tr>
                            <td colspan="8" class="p-8">
                                <div class="flex flex-col items-center justify-center text-gray-400">
                                    <img src="assets/images/empty-data.png" alt="No data" class="h-32 w-32 mb-4" />
                                    <div>No Data</div>
                                </div>
                            </td>
                        </tr>
                }
                else
                {
                    @foreach (var position in Positions)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@position.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@position.Department</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@position.Level</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusClasses(position.IsActive)">
                                    @(position.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            @if (CanUpdate || CanDelete)
                            {
                                <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                    @if (CanUpdate)
                                    {
                                        <button class="px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded text-sm"
                                                @onclick="() => EditPosition(position)">
                                            Edit
                                        </button>
                                    }
                                    @if (CanDelete)
                                    {
                                        <button class="px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-sm"
                                                @onclick="() => ConfirmDelete(position.Id, position.Name)">
                                            Delete
                                        </button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Add/Edit Position -->
@if (ShowAddModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@((NewPosition.Id == 0) ? "Add New Position" : "Edit Position")</h3>

            <div class="space-y-4">
                <input @bind="NewPosition.Name" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                       placeholder="Position Name" />
                <input @bind="NewPosition.Department" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                       placeholder="Department" />
                <input @bind="NewPosition.Level" class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-purple-500"
                       placeholder="Level" />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" @bind="NewPosition.IsActive" class="h-4 w-4 text-purple-600" />
                    <label class="text-gray-700">Active</label>
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-6">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CloseAddModal">Cancel</button>
                <button class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg" @onclick="SaveNewPosition">
                    Save
                </button>
            </div>
        </div>
    </div>
}

<!-- Modal Confirm Delete -->
@if (ShowConfirmModal)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 animate-fade-in">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-md p-6 animate-slide-up">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Confirm Delete</h3>
            <p class="text-gray-700 mb-6">@ConfirmMessage</p>
            <div class="flex justify-end space-x-3">
                <button class="px-4 py-2 bg-gray-300 hover:bg-gray-400 rounded-lg" @onclick="CancelDelete">Cancel</button>
                <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg" @onclick="DeleteConfirmed">Delete</button>
            </div>
        </div>
    </div>
}

<ToastContainer @ref="toastContainer" />

@code {
    private ToastContainer? toastContainer;

    private List<Position>? Positions;
    private bool ShowAddModal = false;
    private Position NewPosition = new Position();
    private bool ShowConfirmModal = false;
    private int PositionIdToDelete;
    private string ConfirmMessage = "";

    private bool CanView = false;
    private bool CanCreate = false;
    private bool CanUpdate = false;
    private bool CanDelete = false;

    protected override async Task OnInitializedAsync()
    {
        // Check permissions first
        CanView = await PermissionService.HasPermissionAsync("position", "view");
        if (!CanView)
        {
            NavigationManager.NavigateTo("/unauthorized");
            return;
        }

        CanCreate = await PermissionService.HasPermissionAsync("position", "create");
        CanUpdate = await PermissionService.HasPermissionAsync("position", "update");
        CanDelete = await PermissionService.HasPermissionAsync("position", "delete");

        // Load data only if user has view permission
        Positions = await PositionService.GetAllAsync();
    }

    private void ShowAddPositionModal()
    {
        if (!CanCreate)
        {
            ToastService.ShowError("You don't have permission to add new positions");
            return;
        }

        NewPosition = new Position();
        ShowAddModal = true;
    }

    private void CloseAddModal()
    {
        ShowAddModal = false;
    }

    private void EditPosition(Position position)
    {
        if (!CanUpdate)
        {
            ToastService.ShowError("You don't have permission to edit positions");
            return;
        }

        NewPosition = new Position
        {
            Id = position.Id,
            Name = position.Name,
            Department = position.Department,
            Level = position.Level,
            IsActive = position.IsActive
        };
        ShowAddModal = true;
    }

    private void ConfirmDelete(int id, string name)
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete positions");
            return;
        }

        PositionIdToDelete = id;
        ConfirmMessage = $"Are you sure you want to delete the position \"{name}\"?";
        ShowConfirmModal = true;
    }

    private async Task DeleteConfirmed()
    {
        if (!CanDelete)
        {
            ToastService.ShowError("You don't have permission to delete positions");
            return;
        }

        try
        {
            await PositionService.DeleteAsync(PositionIdToDelete);
            Positions = await PositionService.GetAllAsync();
            ShowConfirmModal = false;
            ToastService.ShowSuccess("Success deleted!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private void CancelDelete()
    {
        ShowConfirmModal = false;
    }

    private async Task SaveNewPosition()
    {
        if (NewPosition.Id == 0 && !CanCreate)
        {
            ToastService.ShowError("You don't have permission to create new positions");
            return;
        }
        else if (NewPosition.Id != 0 && !CanUpdate)
        {
            ToastService.ShowError("You don't have permission to update positions");
            return;
        }

        try
        {
            if (NewPosition.Id == 0)
                await PositionService.AddAsync(NewPosition);
            else
                await PositionService.UpdateAsync(NewPosition);

            Positions = await PositionService.GetAllAsync();
            NewPosition = new Position();
            ShowAddModal = false;
            ToastService.ShowSuccess("Data Saved!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error: {ex.Message}");
        }
    }

    private string GetStatusClasses(bool isActive) =>
        isActive
        ? "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
        : "inline-flex px-2 py-1 text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800";
}
