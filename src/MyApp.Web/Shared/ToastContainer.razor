@inject ToastService ToastService

<div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 space-y-3 w-full max-w-sm">
    @foreach (var toast in Toasts)
    {
        <div @key="toast.Id" class="@GetToastContainerClasses(toast)">
            <div class="flex-shrink-0">
                @((MarkupString)GetToastIcon(toast.Type))
            </div>
            <div class="flex-1 ml-3">
                <p class="text-sm font-medium @GetToastTextColor(toast.Type)">
                    @toast.Title
                </p>
                <p class="text-sm mt-1 @GetToastMessageColor(toast.Type)">
                    @toast.Message
                </p>
            </div>
            <div class="ml-4 flex-shrink-0">
                <button @onclick="() => DismissToast(toast)"
                        class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 @GetToastFocusRingColor(toast.Type) @GetToastHoverColor(toast.Type)">
                    <span class="sr-only">Dismiss</span>
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                    </svg>
                </button>
            </div>
        </div>
    }
</div>

@code {
    private List<ToastInstance> Toasts = new();

    protected override void OnInitialized()
    {
        ToastService.OnShow += toast => _ = AddToastAsync(toast);
    }

    private void AddToast(ToastInstance toast)
    {
        Toasts.Add(toast);
        StateHasChanged();

        // Auto-dismiss sesuai duration dari service
        _ = Task.Delay(toast.Duration).ContinueWith(async _ =>
        {
            await DismissToast(toast);
        });
    }
    private async Task AddToastAsync(ToastInstance toast)
    {
        Toasts.Add(toast);
        await InvokeAsync(StateHasChanged);

        // Auto-dismiss sesuai duration dari service
        await Task.Delay(toast.Duration);
        await DismissToast(toast);
    }


    private async Task DismissToast(ToastInstance toast)
    {
        if (toast != null)
        {
            await InvokeAsync(() =>
            {
                toast.IsFadingOut = true;
                StateHasChanged();
            });

            // Tunggu animasi fade-out (500ms)
            await Task.Delay(500);

            await InvokeAsync(() =>
            {
                Toasts.Remove(toast);
                StateHasChanged();
            });
        }
    }

    // --- Styling dan Animasi ---
    private string GetToastContainerClasses(ToastInstance toast)
    {
        var baseClasses = "pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg shadow-lg ring-1 ring-black ring-opacity-5 p-4 flex items-start transition-all duration-500";
        var typeClasses = toast.Type switch
        {
            "success" => "bg-green-50",
            "error"   => "bg-red-50",
            "warning" => "bg-yellow-50",
            _         => "bg-blue-50",
        };
        var animationClass = toast.IsFadingOut ? "animate-fade-out-slide-center" : "animate-fade-in-slide-center";
        return $"{baseClasses} {typeClasses} {animationClass}";
    }

    private string GetToastIcon(string type) => type switch
    {
        "success" => """<svg class="h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>""",
        "error"   => """<svg class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" /></svg>""",
        "warning" => """<svg class="h-6 w-6 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" /></svg>""",
        _         => """<svg class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" /></svg>"""
    };

    private string GetToastTextColor(string type) => type switch { "success" => "text-green-800", "error" => "text-red-800", "warning" => "text-yellow-800", _ => "text-blue-800" };
    private string GetToastMessageColor(string type) => type switch { "success" => "text-green-700", "error" => "text-red-700", "warning" => "text-yellow-700", _ => "text-blue-700" };
    private string GetToastHoverColor(string type) => type switch { "success" => "text-green-500 hover:bg-green-100", "error" => "text-red-500 hover:bg-red-100", "warning" => "text-yellow-500 hover:bg-yellow-100", _ => "text-blue-500 hover:bg-blue-100" };
    private string GetToastFocusRingColor(string type) => type switch { "success" => "focus:ring-green-600 focus:ring-offset-green-50", "error" => "focus:ring-red-600 focus:ring-offset-red-50", "warning" => "focus:ring-yellow-600 focus:ring-offset-yellow-50", _ => "focus:ring-blue-600 focus:ring-offset-blue-50" };
}
