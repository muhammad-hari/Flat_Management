@inherits LayoutComponentBase
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using MyApp.Web.Shared.Components
@using MyApp.Web.Shared.IdleScreen
@using MyApp.Core.Domain
@using Blazored.Toast.Services
@inject NavigationManager NavManager
@inject MyApp.Web.Authentication.CustomAuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@inject IToastService ToastService
@attribute [Authorize]

<SessionCheck>
    <div class="min-h-screen flex flex-col lg:flex-row bg-gray-50">
        <div class="lg:hidden">
            <!-- Mobile Header -->
            <div class="bg-white shadow px-4 py-2 flex items-center justify-between">
                <button @onclick="ToggleSidebar" class="p-2 rounded-lg hover:bg-gray-100">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div class="flex items-center space-x-4">
                    <NotificationDropdown />
                    <!-- Mobile Avatar -->
                    <div class="w-8 h-8 rounded-full overflow-hidden border-2 border-gray-300">
                        @if (!string.IsNullOrEmpty(userSession?.PhotoUrl))
                        {
                            <img src="@userSession.PhotoUrl" alt="User Avatar" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-full avatar-fallback">
                                <span class="text-sm">@(userSession?.Username?.Substring(0, 1).ToUpper() ?? "U")</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="@(isSidebarOpen ? "block z-[150]" : "hidden") lg:block lg:z-0 fixed inset-0 overflow-hidden pointer-events-none">
            <div class="absolute inset-0 bg-black/50 lg:hidden pointer-events-auto" @onclick="ToggleSidebar"></div>
            <div class="h-full overflow-hidden pointer-events-auto w-72">
                <Sidebar />
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-1 flex flex-col min-h-screen lg:ml-72">
            <!-- Desktop Top Bar -->
            <div class="hidden lg:flex items-center justify-end bg-white shadow px-6 py-3 z-50">
                <!-- Bell Icon -->
                <NotificationDropdown />

                <!-- Avatar Dropdown -->
                <div class="relative">
                    <div @onclick="ToggleAvatarMenu" id="avatarTrigger" 
                         class="w-10 h-10 rounded-full overflow-hidden border-2 border-gray-300 cursor-pointer hover:border-blue-500 transition-colors">
                        @if (!string.IsNullOrEmpty(userSession?.PhotoUrl))
                        {
                            <img src="@userSession.PhotoUrl" alt="User Avatar" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-full avatar-fallback">
                                <span class="text-lg">@(userSession?.Username?.Substring(0, 1).ToUpper() ?? "U")</span>
                            </div>
                        }
                    </div>

                    @if (showAvatarMenu)
                    {
                        <div id="avatarMenu" class="absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-lg py-2 z-[100]">
                            <!-- Header with Close Button -->
                            <div class="flex justify-between items-center px-4 py-2 border-b border-gray-100">
                                <div>
                                    <p class="text-sm font-semibold text-gray-800">@(userSession?.Username ?? "User Name")</p>
                                    <p class="text-xs text-gray-500">@(userSession?.Roles?.FirstOrDefault() ?? "Role")</p>
                                </div>
                                <button @onclick="() => showAvatarMenu = false" 
                                        class="p-1.5 hover:bg-gray-100 rounded-full transition-colors">
                                    <i class="fas fa-times text-gray-400 hover:text-gray-600"></i>
                                </button>
                            </div>
                            
                            <!-- Menu Items -->
                            <a href="/profile" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                <i class="fas fa-user w-5 mr-2"></i>
                                Profile
                            </a>
                            <a @onclick="ShowChangePasswordModal" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 cursor-pointer">
                                <i class="fas fa-key w-5 mr-2"></i>
                                Change Password
                            </a>
                            <div class="border-t border-gray-100 my-1"></div>
                            <button @onclick="LogoutUser" class="flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-gray-50">
                                <i class="fas fa-sign-out-alt w-5 mr-2"></i>
                                Logout
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="flex-1 p-4 lg:p-8 relative overflow-auto">
                <div class="absolute inset-0 flex justify-center items-center pointer-events-none z-0">
                    <img src="assets/images/mock-polri.png" class="max-w-[40%] max-h-[40%] opacity-15" alt="watermark">
                </div>
                <IdleOverlay />
                @Body
            </div>
        </div>
    </div>
</SessionCheck>

<ChangePasswordModal @bind-IsVisible="showChangePasswordModal" OnPasswordChanged="HandlePasswordChanged" />
<ToastContainer />

@code {
    private bool isSidebarOpen = false;
    private bool showAvatarMenu = false;
    private bool showChangePasswordModal;
    private UserSession? userSession;

    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;

    protected override async Task OnParametersSetAsync()
    {
        var authState = await AuthState;
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            userSession = await AuthStateProvider.GetUserSessionAsync();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initializeAvatarMenu");
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
    }

    private async Task ToggleAvatarMenu()
    {
        showAvatarMenu = !showAvatarMenu;
        if (showAvatarMenu)
        {
            await JS.InvokeVoidAsync("addGlobalClickHandler");
        }
        else 
        {
            await JS.InvokeVoidAsync("removeGlobalClickHandler");
        }
    }

    [JSInvokable]
    public void HandleGlobalClick(string elementId)
    {
        if (showAvatarMenu && 
            elementId != "avatarMenu" && 
            elementId != "avatarTrigger" && 
            !elementId.Contains("change-password"))
        {
            showAvatarMenu = false;
            StateHasChanged();
        }
    }

    private void ShowChangePasswordModal()
    {
        showChangePasswordModal = true;
        showAvatarMenu = false;
    }

    private async Task LogoutUser()
    {
        await AuthStateProvider.NotifyUserLogout();
        NavManager.NavigateTo("/login");
    }

    private async Task HandlePasswordChanged()
    {
        try
        {
            await AuthStateProvider.GetUserSessionAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Failed to update session. Please log in again.");
        }
    }
}
<style>
    /* Add this to your site.css or appropriate stylesheet */
    .avatar-fallback {
        background: linear-gradient(45deg, #4F46E5, #3B82F6);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        text-transform: uppercase;
    }
</style>

