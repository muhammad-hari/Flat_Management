@using MyApp.Core.Entities
@using MyApp.Web.Shared.Components
@using System.Collections.Generic
@using Microsoft.AspNetCore.Identity
@using MyApp.Infrastructure.Identity
@using MyApp.Web.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@using MyApp.Core.Interfaces
@using System.Security.Claims
@using Microsoft.Extensions.DependencyInjection

@inject NavigationManager NavManager
@inject SignInManager<ApplicationUser> SignInManager
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject HttpClient Http
@inject ILogger<Sidebar> Logger
@inject IMenuService MenuService
@inject IServiceScopeFactory ScopeFactory
@inject ISystemSettingService SystemSettingService
@implements IDisposable

<div class="flex flex-col fixed top-0 left-0 h-screen w-64 lg:w-72 bg-gradient-to-b from-red-800 to-black overflow-hidden">
    <!-- Logo Section -->
    <div class="flex-shrink-0 flex flex-col items-center py-4 lg:py-6 px-3 lg:px-4 border-b border-gray-700">
        <label class="flex flex-col items-center cursor-pointer">
            <!-- Logo dari System Settings -->
            <img src="@logoUrl" alt="App Logo"
                 class="w-24 h-24 lg:w-32 lg:h-32 rounded-full border-2 border-blue shadow-md mb-3 object-cover" />

            <!-- InputFile tersembunyi; klik label memicu input ini -->
            <InputFile OnChange="HandleSelected" class="hidden" />
        </label>

        <!-- Nama App dari System Settings -->
        <span class="text-sm font-semibold text-white mt-4 text-center">
            @siteName
        </span>
    </div>

    <!-- Menu Items - Scrollable -->
    <div class="flex-1 overflow-hidden">
        <div class="h-full py-3 lg:py-4 relative" data-simplebar data-simplebar-auto-hide="false">
            <div class="space-y-1 px-2">
                @foreach (var item in MenuItems)
                {
                    <div class="group">
                        @RenderMenuItem(item, false)
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Logout Section - Sticky at bottom -->
    <div class="flex-shrink-0 border-t border-gray-700 p-3 lg:p-4 bg-black/50">
        <CascadingAuthenticationState>
            <AuthorizeView>
                <Authorized>
                    <div class="mb-2 lg:mb-3 text-2xs lg:text-xs text-gray-400 px-2">
                        Logged in as: <span class="text-white font-semibold block truncate">@context.User.Identity?.Name</span>
                    </div>
                    <button @onclick="LogoutAsync"
                            disabled="@isLoading"
                            class="w-full flex items-center justify-start gap-3 px-4 py-3 cursor-pointer transition-all duration-200 hover:bg-red-700 rounded-lg bg-red-600 text-white font-medium text-sm disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (isLoading)
                        {
                            <svg class="animate-spin h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        else
                        {
                            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                        }
                        <span>@(isLoading ? "Logging out..." : "Logout")</span>
                    </button>
                </Authorized>
                <NotAuthorized>
                    <p class="text-gray-400 text-sm px-2">Not logged in</p>
                </NotAuthorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
    </div>

</div>

@code {
    private const string DefaultLogoUrl = "/assets/images/default-avatar.png";
    private const string DefaultSiteName = "Flat Management System";
    
    private string logoUrl = DefaultLogoUrl;
    private string siteName = DefaultSiteName;
    private string _activeItem = "dashboard";
    private List<string> _expandedMenus = new();
    private bool isLoading = false;
    private List<MenuDto> MenuItems = new();
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load initial settings
            await LoadSystemSettings();
            
            // Subscribe to settings changes - langsung ke injected service
            SystemSettingService.OnSettingsChanged += OnSettingsChanged;
            
            await Task.Delay(100);

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                var roles = authState.User.Claims
                    .Where(c => c.Type == ClaimTypes.Role)
                    .Select(c => c.Value)
                    .ToList();

                Logger.LogInformation($"User roles: {string.Join(", ", roles)}");
                
                MenuItems = await MenuService.GetMenusByUserRolesAsync(roles);
                Logger.LogInformation($"Loaded {MenuItems.Count} menus");
            }
            else
            {
                Logger.LogWarning("User not authenticated");
                MenuItems = new List<MenuDto>();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading menus");
            MenuItems = new List<MenuDto>();
        }
        
        StateHasChanged();
    }

    private async Task LoadSystemSettings()
    {
        try
        {
            // Load Site Name with default fallback
            var siteNameSetting = await SystemSettingService.GetSettingValueAsync("SiteName");
            siteName = !string.IsNullOrWhiteSpace(siteNameSetting) 
                ? siteNameSetting 
                : DefaultSiteName;

            // Load Site Logo with default fallback
            var logoSetting = await SystemSettingService.GetSettingValueAsync("SiteLogo");
            if (!string.IsNullOrWhiteSpace(logoSetting))
            {
                logoUrl = $"data:image/png;base64,{logoSetting}";
            }
            else
            {
                logoUrl = DefaultLogoUrl;
            }

            Logger.LogInformation($"Loaded settings - Site: {siteName}, Logo: {(string.IsNullOrWhiteSpace(logoSetting) ? "Default" : "Custom")}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading system settings, using defaults");
            siteName = DefaultSiteName;
            logoUrl = DefaultLogoUrl;
        }
    }

    private async void OnSettingsChanged()
    {
        Logger.LogInformation("Settings changed event received, reloading...");
        await LoadSystemSettings();
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                if (file.Size > 2 * 1024 * 1024)
                {
                    Logger.LogWarning("File size exceeds 2MB");
                    return;
                }

                using var stream = file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 2);
                using var ms = new MemoryStream();
                await stream.CopyToAsync(ms);
                var bytes = ms.ToArray();
                var base64 = Convert.ToBase64String(bytes);
                
                // Update via service - akan trigger event
                await SystemSettingService.UpdateSettingAsync("SiteLogo", base64);
                
                // Local update untuk immediate feedback
                logoUrl = $"data:{file.ContentType};base64,{base64}";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error uploading logo");
            }
        }
    }

    public void Dispose()
    {
        try
        {
            SystemSettingService.OnSettingsChanged -= OnSettingsChanged;
            Logger.LogInformation("Unsubscribed from settings changed event");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error unsubscribing from settings changed event");
        }
    }

    private async Task LogoutAsync()
    {
        try
        {
            isLoading = true;
            Logger.LogInformation("Starting logout process");

            HttpResponseMessage response = null;
            try
            {
                response = await Http.PostAsync("/api/auth/logout", null);
                if (response.IsSuccessStatusCode)
                {
                    Logger.LogInformation("Logout API call successful");
                }
                else
                {
                    Logger.LogWarning($"Logout API returned: {response.StatusCode}");
                }
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Logout API call failed â€“ proceeding to clear local session anyway");
            }

            try
            {
                await AuthStateProvider.NotifyUserLogout();
                Logger.LogInformation("Local session cleared via CustomAuthenticationStateProvider");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error while clearing local authentication state");
            }

            await Task.Delay(300);
            NavManager.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"Logout error: {ex.Message}");
            NavManager.NavigateTo("/login", forceLoad: true);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ToggleSubmenu(string itemCode)
    {
        if (_expandedMenus.Contains(itemCode))
        {
            _expandedMenus.Remove(itemCode);
        }
        else
        {
            _expandedMenus.Add(itemCode);
        }
        StateHasChanged();
    }

    private void SetActiveItem(string itemCode)
    {
        _activeItem = itemCode;
        StateHasChanged();
    }

    private RenderFragment RenderMenuItem(MenuDto item, bool isSubmenu) => builder =>
    {
        builder.OpenElement(0, "div");
        builder.OpenElement(1, "button");
        builder.AddAttribute(2, "type", "button");
        builder.AddAttribute(3, "class", GetMenuItemClasses(item, isSubmenu));
        builder.AddAttribute(4, "onclick", EventCallback.Factory.Create(this, () => HandleMenuItemClick(item)));

        builder.OpenElement(5, "div");
        builder.AddAttribute(6, "class", "flex items-center gap-3 flex-1 min-w-0");
        builder.AddContent(7, RenderIcon(item.IconName ?? "", GetIconClasses(item)));
        builder.OpenElement(8, "span");
        builder.AddAttribute(9, "class", "text-white truncate");
        builder.AddContent(10, item.Name);
        builder.CloseElement();
        builder.CloseElement();

        if (HasSubmenu(item))
        {
            builder.OpenElement(11, "div");
            builder.AddAttribute(12, "class", "flex-shrink-0 ml-auto");
            builder.AddContent(13, _expandedMenus.Contains(item.Code)
                ? RenderIcon("chevron-down", "w-4 h-4 text-gray-300")
                : RenderIcon("chevron-right", "w-4 h-4 text-gray-300"));
            builder.CloseElement();
        }

        builder.CloseElement();

        if (HasSubmenu(item) && _expandedMenus.Contains(item.Code))
        {
            builder.OpenElement(14, "div");
            builder.AddAttribute(15, "class", "ml-6 mt-1 space-y-1");
            foreach (var sub in item.Children)
            {
                builder.AddContent(16, RenderMenuItem(sub, true));
            }
            builder.CloseElement();
        }

        builder.CloseElement();
    };

    private bool HasSubmenu(MenuDto item) => item.Children?.Any() == true;

    private void HandleMenuItemClick(MenuDto item)
    {
        SetActiveItem(item.Code);

        if (HasSubmenu(item))
        {
            ToggleSubmenu(item.Code);
        }
        else if (!string.IsNullOrEmpty(item.Url))
        {
            NavManager.NavigateTo(item.Url);
        }
    }

    private string GetMenuItemClasses(MenuDto item, bool isSubmenu)
    {
        var classes = "w-full flex items-center justify-between px-3 lg:px-4 py-2 lg:py-2.5 cursor-pointer transition-all duration-200 hover:bg-white/10 rounded-lg text-xs lg:text-sm";
        
        if (_activeItem == item.Code)
        {
            classes += " bg-black/30 border-l-4 border-yellow-400";
        }
        
        if (isSubmenu)
        {
            classes += " text-gray-300 hover:text-white pl-2";
        }
        
        return classes;
    }

    private string GetIconClasses(MenuDto item)
    {
        var classes = "w-4 h-4 lg:w-5 lg:h-5 flex-shrink-0 transition-all duration-200";

        if (_activeItem == item.Code)
        {
            classes += $" {item.Color}";
        }
        else
        {
            classes += $" text-gray-400 group-hover:{item.Color}";
        }

        return classes;
    }

