    private void ToggleSubmenu(string itemId)
    {
        if (_expandedMenus.Contains(itemId))
        {
            _expandedMenus.Remove(itemId);
        }
        else
        {
            _expandedMenus.Add(itemId);
        }
        StateHasChanged();
    }

    private void SetActiveItem(string itemId)
    {
        _activeItem = itemId;
        StateHasChanged();
    }

    private RenderFragment RenderMenuItem(MenuItem item, bool isSubmenu) => builder =>
    {
        builder.OpenElement(0, "div");
        // Tombol utama
        builder.OpenElement(1, "button");
        builder.AddAttribute(2, "type", "button");
        builder.AddAttribute(3, "class", GetMenuItemClasses(item, isSubmenu));
        builder.AddAttribute(4, "onclick", EventCallback.Factory.Create(this, () => HandleMenuItemClick(item)));

        builder.OpenElement(5, "div");
        builder.AddAttribute(6, "class", "flex items-center gap-4"); // Perlebar jarak icon dan text
        builder.AddContent(7, RenderIcon(item.IconName, GetIconClasses(item)));
        builder.OpenElement(8, "span");
        builder.AddAttribute(9, "class", "text-white"); // Text menu putih
        builder.AddContent(10, item.Label);
        builder.CloseElement(); // span
        builder.CloseElement(); // flex

        if (HasSubmenu(item))
        {
            builder.OpenElement(11, "div");
            builder.AddAttribute(12, "class", "ml-auto");
            builder.AddContent(13, _expandedMenus.Contains(item.Id)
                ? RenderIcon("chevron-down", "w-4 h-4 text-gray-300")
                : RenderIcon("chevron-right", "w-4 h-4 text-gray-300"));
            builder.CloseElement();
        }

        builder.CloseElement(); // button

        // Render submenu jika expanded
        if (HasSubmenu(item) && _expandedMenus.Contains(item.Id))
        {
            builder.OpenElement(14, "div");
            builder.AddAttribute(15, "class", "ml-6 mt-1 space-y-1");
            foreach (var sub in item.Submenu)
            {
                builder.AddContent(16, RenderMenuItem(sub, true));
            }
            builder.CloseElement();
        }

        builder.CloseElement(); // wrapper
    };

    private string GetMenuItemClasses(MenuItem item, bool isSubmenu)
    {
        var classes = "flex items-center justify-between px-4 py-3 cursor-pointer transition-all duration-200 hover:bg-white/10 rounded-lg mx-2";
        
        if (_activeItem == item.Id)
        {
            @* classes += " bg-white/20"; *@
            classes += " bg-black/30";
        }
        
        if (isSubmenu)
        {
            classes += " ml-4 pl-8";
        }
        
        return classes;
    }

    private async Task HandleSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 1024 * 1024 * 2);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var bytes = ms.ToArray();
            avatarUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(bytes)}";
        }
    }

    private string GetIconClasses(MenuItem item)
    {
        var classes = "w-5 h-5 transition-all duration-200";

        if (_activeItem == item.Id)
        {
            classes += $" {item.Color}";
        }
        else
        {
            // Pastikan tetap ada prefix "text-"
            classes += $" text-gray-400 group-hover:{item.Color}";
        }

        return classes;
    }

    private bool HasSubmenu(MenuItem item)
    {
        return item.Submenu != null && item.Submenu.Any();
    }

    private void HandleMenuItemClick(MenuItem item)
{
    SetActiveItem(item.Id);

    if (HasSubmenu(item))
    {
        ToggleSubmenu(item.Id);
    }
    else if (!string.IsNullOrEmpty(item.Url))
    {
        NavManager.NavigateTo(item.Url);
    }
