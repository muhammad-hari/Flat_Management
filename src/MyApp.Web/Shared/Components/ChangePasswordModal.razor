@using MyApp.Core.Models
@using MyApp.Web.Authentication
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager NavManager
@inject ToastService ToastService
@inject CustomAuthenticationStateProvider AuthStateProvider

<div class="@(IsVisible ? "fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-[200]" : "hidden")"
     @onclick="HandleBackdropClick">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md p-6 mx-4 transform transition-all"
         @onclick:stopPropagation="true">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-xl font-semibold text-gray-800">Change Password</h3>
            <button @onclick="OnClose" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
                <i class="fas fa-times text-gray-500"></i>
            </button>
        </div>

        <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <CustomValidation @ref="customValidation" />

            <div class="space-y-5">
                <!-- Old Password Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
                    <div class="relative">
                        <input type="@(showOldPassword ? "text" : "password")" 
                               @bind-value="model.OldPassword"
                               class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all
                                      placeholder-gray-400 text-gray-900" 
                               placeholder="Enter your current password" />
                        <button type="button" @onclick="() => showOldPassword = !showOldPassword" 
                                class="absolute right-3 top-1/2 -translate-y-1/2 p-1 hover:bg-gray-100 rounded-full transition-colors">
                            <i class="fas @(showOldPassword ? "fa-eye-slash" : "fa-eye") text-gray-400 hover:text-gray-600"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.OldPassword)" class="mt-1 text-sm text-red-500" />
                </div>

                <!-- New Password Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                    <div class="relative">
                        <input type="@(showNewPassword ? "text" : "password")" 
                               @bind-value="model.NewPassword"
                               class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all
                                      placeholder-gray-400 text-gray-900" 
                               placeholder="Enter your new password" />
                        <button type="button" @onclick="() => showNewPassword = !showNewPassword" 
                                class="absolute right-3 top-1/2 -translate-y-1/2 p-1 hover:bg-gray-100 rounded-full transition-colors">
                            <i class="fas @(showNewPassword ? "fa-eye-slash" : "fa-eye") text-gray-400 hover:text-gray-600"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.NewPassword)" class="mt-1 text-sm text-red-500" />
                    <!-- Password Requirements -->
                    <div class="mt-2 text-xs text-gray-500 space-y-1">
                        <p>Password must:</p>
                        <ul class="list-disc list-inside pl-2 space-y-0.5">
                            <li>Must be 12â€“16 characters long</li>
                            <li>Must contain uppercase and lowercase letters, at least one digit, and one special character</li>
                        </ul>
                    </div>
                </div>

                <!-- Confirm Password Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                    <div class="relative">
                        <input type="@(showConfirmPassword ? "text" : "password")" 
                               @bind-value="model.ConfirmPassword"
                               class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 transition-all
                                      placeholder-gray-400 text-gray-900" 
                               placeholder="Confirm your new password" />
                        <button type="button" @onclick="() => showConfirmPassword = !showConfirmPassword" 
                                class="absolute right-3 top-1/2 -translate-y-1/2 p-1 hover:bg-gray-100 rounded-full transition-colors">
                            <i class="fas @(showConfirmPassword ? "fa-eye-slash" : "fa-eye") text-gray-400 hover:text-gray-600"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => model.ConfirmPassword)" class="mt-1 text-sm text-red-500" />
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-3">
                <button type="button" @onclick="OnClose"
                        disabled="@isProcessing"
                        class="px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg
                               hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500/20 transition-all
                               disabled:opacity-50 disabled:cursor-not-allowed">
                    Cancel
                </button>
                <button type="submit" 
                        disabled="@isProcessing"
                        class="px-4 py-2.5 text-sm font-medium text-white bg-blue-600 rounded-lg
                               hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition-all
                               disabled:opacity-50 disabled:cursor-not-allowed 
                               inline-flex items-center">
                    @if (isProcessing)
                    {
                        <span class="w-4 h-4 mr-2">
                            <span class="animate-spin">
                                <i class="fas fa-circle-notch"></i>
                            </span>
                        </span>
                    }
                    Change Password
                </button>
            </div>
        </EditForm>
    </div>
</div>

<ToastContainer @ref="toastContainer" />

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public EventCallback OnPasswordChanged { get; set; }

    private ChangePasswordModel model = new();
    private CustomValidation? customValidation;
    private bool showOldPassword;
    private bool showNewPassword;
    private bool showConfirmPassword;
    private bool isProcessing;
    private ToastContainer? toastContainer;

    private async Task OnClose()
    {
        if (!isProcessing)
        {
            model = new();
            await IsVisibleChanged.InvokeAsync(false);
        }
    }

    private async Task HandleBackdropClick()
    {
        if (!isProcessing)
        {
            await OnClose();
        }
    }

    private async Task HandleValidSubmit()
    {
        if (isProcessing) return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            var response = await Http.PostAsJsonAsync("api/auth/change-password", model);
            if (response.IsSuccessStatusCode)
            {
                // First notify the authentication state provider
                await AuthStateProvider.NotifyUserLogout();
                
                ToastService.ShowSuccess("Password changed successfully! Please login again.");
                
                // Close modal and notify parent
                await OnPasswordChanged.InvokeAsync();
                await OnClose();

                // Short delay before redirect
                await Task.Delay(1500);
                
                // Navigate to login page
                NavManager.NavigateTo("/login", true);
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<Dictionary<string, string>>();
                if (error != null && error.ContainsKey("message"))
                {
                    if (!error["message"].Contains("validation"))  // Skip validation messages
                    {
                        ToastService.ShowError(error["message"]);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("An error occurred while changing password.");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }
}